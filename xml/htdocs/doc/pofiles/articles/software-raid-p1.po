#: en/articles/software-raid-p1.xml:449
#, no-wrap
msgid "An ext2 RAID device"
msgstr ""

#. type: Content of: <guide><chapter><section><body><pre>
#: en/articles/software-raid-p1.xml:450
#, no-wrap
msgid "# <i>mke2fs /dev/md0</i>\n"
msgstr ""

#. type: Content of: <guide><chapter><section><body><p>
#: en/articles/software-raid-p1.xml:454
#, no-wrap
msgid "or\n"
msgstr ""

#. type: Attribute 'caption' of: <guide><chapter><section><body><pre>
#: en/articles/software-raid-p1.xml:457
#, no-wrap
msgid "A ReiserFS RAID device"
msgstr ""

#. type: Content of: <guide><chapter><section><body><pre>
#: en/articles/software-raid-p1.xml:458
#, no-wrap
msgid "# <i>mkreiserfs /dev/md0</i>\n"
msgstr ""

#. type: Content of: <guide><chapter><section><body><p>
#: en/articles/software-raid-p1.xml:462
#, no-wrap
msgid "Now your new filesystem can be mounted:\n"
msgstr ""

#. type: Attribute 'caption' of: <guide><chapter><section><body><pre>
